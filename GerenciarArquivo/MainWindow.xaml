<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GerenciarArquivo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GerenciarArquivo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Gerenciar Arquivo">

    <Grid Margin="0" Padding="32" RowSpacing="0" Background="{StaticResource Cinza12}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Origem dos arquivos -->
        <StackPanel Orientation="Vertical" Spacing="8" Margin="0,0,0,18">
            <Button x:Name="btnSelecionarPastaOrigem" Content="Obter arquivos de uma pasta" Click="btnSelecionarPastaOrigem_Click" HorizontalAlignment="Stretch"/>
            <Button x:Name="btnAddArquivo" Content="Selecionar arquivos" Click="btnAddArquivo_Click" HorizontalAlignment="Stretch"/>
        </StackPanel>

        <!-- Lista de arquivos -->
        <Border Grid.Row="1" Background="{StaticResource Cinza10}" Padding="0,12,0,0" CornerRadius="5,5,0,0">
            <ListView x:Name="lvFiles"  Padding="8,8,8,0" CornerRadius="5" Margin="0,0,0,8">
                <ListView.ItemTemplate >
                    <DataTemplate  >
                        <Grid Padding="-6,4,0,4" Margin="0,0,0,2" ColumnSpacing="0" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32 "/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnExcluirArquivo" 
                                    Click="btnExcluirArquivo_Click" 
                                    Grid.Column="0"  Tag="{Binding FullName}" 
                                    Width="32" Height="32" 
                                    ToolTipService.ToolTip="Remover arquivo da lista" 
                                    Style="{StaticResource AlternateCloseButtonStyle}">
                                <FontIcon Glyph="&#xE894;" FontFamily="Segoe Fluent Icons" FontSize="14"/>
                            </Button>

                            <TextBlock Grid.Column="1" Padding="8,0,0,0" Text="{Binding Name}" VerticalAlignment="Center"/>

                            <Button x:Name="btnCopiarArquivo" 
                                     Click="btnCopiarArquivo_Click" 
                                     Grid.Column="2"  Tag="{Binding FullName}" 
                                     Width="28" Height="28" 
                                     Padding="0"
                                     ToolTipService.ToolTip="Copiar para destino"
                                     Style="{StaticResource DefaultButtonStyle}">

                                <FontIcon Glyph="&#xE8C8;" FontFamily="Segoe Fluent Icons" FontSize="16"/>
                            </Button>

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <Grid Grid.Row="2" Margin="0" Padding="18,4" Background="{StaticResource Cinza10Transp50}" CornerRadius="0,0,5,5" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="32"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="btnLimparLista" 
                    ToolTipService.ToolTip="Limpar lista" 
                    Click="btnLimparLista_Click" 
                    Grid.Column="0" 
                    Padding="0"
                    Width="32" Height="32" Style="{StaticResource AlternateCloseButtonStyle}">
                <FontIcon Glyph="&#xE894;" FontFamily="Segoe Fluent Icons" FontSize="16"  Foreground="{StaticResource Cinza2}"/>
            </Button>

            <TextBlock x:Name="txtQtdTotal" 
                       Grid.Column="1" 
                       Text="Total: 999" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontSize="12" Foreground="{StaticResource Cinza2}"/>

            <Button x:Name="btnCopiarLista" 
                    ToolTipService.ToolTip="Copiar arquivos para destino" 
                    Click="btnCopiarLista_Click" 
                    Grid.Column="2" 
                    Padding="0"
                    Width="32" Height="32" Style="{StaticResource AlternateCloseButtonStyle}">
                <FontIcon Glyph="&#xE8C8;" FontFamily="Segoe Fluent Icons" FontSize="16"  Foreground="{StaticResource Cinza2}"/>
            </Button>
        </Grid>
        
       
        <!-- Destino dos arquivos -->
        <StackPanel Grid.Row="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Spacing="8" Background="{StaticResource Cinza10}" Padding="12" CornerRadius="5" Margin="0,12,0,0">
            <CheckBox Content="Nome PadrÃ£o:" x:Name="chkNomePadrao" Unchecked="chkNomePadrao_Unchecked" Checked="chkNomePadrao_Checked"/>
            <TextBox x:Name="txtNomePadrao" HorizontalAlignment="Stretch" LostFocus="txtNomePadrao_LostFocus"/>
            
            <Border Height="4"/>
            
            <TextBlock x:Name="txtCaminhoDestino" VerticalAlignment="Center" Text="Nenhuma pasta selecionada"/>
            <Button x:Name="btnSelecionarPastaDestino" Content="Selecionar Pasta Destino" Click="btnSelecionarPastaDestino_Click" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</Window>